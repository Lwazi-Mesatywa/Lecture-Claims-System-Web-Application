@model IEnumerable<Lecture_Claims_System_Web_Application.Claim>

@{
    ViewData["Title"] = "HR - Accepted Claims and Invoices";
}

<h2>Accepted Claims and Invoices</h2>

<table class="table" style="width:100%; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9;">
    <thead>
        <tr style="background-color: #4CAF50; color: white;">
            <th>Date</th>
            <th>Lecturer Username</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
            <th>Invoice Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr style="background-color: #f2f2f2;">
                <td>@claim.ClaimDate.ToShortDateString()</td>
                <td>@claim.LecturerUsername</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.Amount</td>
                <td>
                    <!-- Invoice number logic -->
                    <span>@($"INV-{claim.Id:D6}")</span>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Styles {
    <style>
        .table th, .table td {
            padding: 10px;
            text-align: left;
        }

        .table tr:nth-child(even) {
            background-color: #e9e9e9;
        }

        .table th {
            background-color: #4CAF50;
            color: white;
        }

        .table td {
            border-top: 1px solid #ddd;
        }

        .table {
            margin-top: 20px;
            width: 100%;
            border-collapse: collapse;
        }

        /* Button styles */
        .btn-green {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            cursor: pointer;
            border-radius: 5px;
        }

        .btn-grey {
            background-color: #888888;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            cursor: pointer;
            border-radius: 5px;
        }

        .btn-green:hover {
            background-color: #45a049;
        }

        .btn-grey:hover {
            background-color: #777777;
        }
    </style>
}
