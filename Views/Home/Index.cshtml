@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: white;
            font-family: Arial, sans-serif;
        }

        .container {
            text-align: center;
            margin-top: 50px;
        }

        .title {
            font-size: 28px;
            font-weight: bold;
            color: silver;
            margin-bottom: 20px;
        }

        .menu {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }

        .menu button {
            background-color: yellow;
            color: black;
            border: 2px solid silver;
            border-radius: 5px;
            padding: 15px 30px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .menu button:hover {
            background-color: silver;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="title">
            Welcome to the Lecturer Monthly Claims System
        </div>
        <div class="menu">
            <form action="/Lecturer/Index">
                <button type="submit">Lecturer Options</button>
            </form>
            <form action="/Coordinator/Index">
                <button type="submit">Coordinator Actions</button>
            </form>
            <form action="/HR/Index">
                <button type="submit">Human Resources</button>
            </form>
        </div>
    </div>
</body>
</html>
